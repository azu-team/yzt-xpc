.u-btn {
	margin: 50rpx 0;
	color: #fff;
	width: 600rpx;
	height: 88rpx;
	font-size: 34rpx;
	background: -webkit-linear-gradient(bottom, rgba(106, 67, 254, 1) 0%, rgba(71, 149, 249, 1) 100%);
	background: linear-gradient(360deg, rgba(106, 67, 254, 1) 0%, rgba(71, 149, 249, 1) 100%);
	box-shadow: 0rpx 10rpx 20rpx 0rpx rgba(71, 149, 249, 0.3);
	border-radius: 44rpx;
	font-weight: 600;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.m-title {
	font-size: 36rpx;
	line-height: 48rpx;
	font-weight: bold;
	margin-bottom: 30rpx;
}
.m-title::before {
	content: '';
	display: inline-block;
	width: 20rpx;
	height: 36rpx;
	vertical-align: middle;
	background: #ffe16f;
	margin-right: 20rpx;
	border-radius: 10rpx;
}
.g-btn{
	display: inline-block;
	padding: 5rpx 10rpx;
	border-radius: 15rpx;
	font-size: 30rpx;
	border: 1rpx solid #d9ecff;
	color: #409eff;
	background-color: #ecf5ff;
	white-space: nowrap;
}
